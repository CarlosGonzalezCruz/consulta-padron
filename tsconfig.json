{
    "compilerOptions": {
        "target": "es2020",
        "module": "es2020",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "outDir": "out",
        "rootDir": "src",
        "sourceMap": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true,
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./node_modules/*",
        "./node-oracledb/*"
    ]
}